        // --- APP LOGIC ---

        function switchView(viewName) {
            document.querySelectorAll('.view').forEach(view => view.classList.add('hidden'));
            document.getElementById(`${viewName}-view`).classList.remove('hidden');
            
            document.querySelectorAll('.nav-button').forEach(btn => btn.classList.remove('active'));
            document.querySelector(`button[onclick="switchView('${viewName}')"]`).classList.add('active');
        }

        function createModal(title, content) {
            const modalHTML = `
                <div class="modal-overlay" onclick="this.remove()">
                    <div class="modal-content" onclick="event.stopPropagation()">
                        <h2 class="text-2xl font-bold mb-4">${title}</h2>
                        <div class="text-gray-300 space-y-4">${content}</div>
                        <button class="mt-6 w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded-lg transition" onclick="this.closest('.modal-overlay').remove()">Close</button>
                    </div>
                </div>
            `;
            document.getElementById('modal-container').innerHTML = modalHTML;
        }

        // --- VIEW RENDERERS ---

        function renderDashboard() {
            const now = new Date();
            const hours = now.getHours() + now.getMinutes() / 60;
            const currentBlock = dailyRhythm.find(block => hours >= block.start && hours < block.end) || dailyRhythm[0];

            const dashboardHTML = `
                <div class="space-y-6">
                    <!-- Current Time Block -->
                    <div class="bg-gray-700 p-4 rounded-lg shadow-lg">
                        <div class="flex justify-between items-center mb-2">
                             <h2 class="text-lg font-bold text-white">Current Rhythm</h2>
                             <span class="text-sm font-mono bg-gray-600 px-2 py-1 rounded">${now.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}</span>
                        </div>
                        <div class="bg-indigo-500 text-white p-3 rounded-md">
                            <h3 class="font-semibold text-xl">${currentBlock.name}</h3>
                        </div>
                        <p class="mt-3 text-gray-300"><strong class="text-white">Mode:</strong> ${currentBlock.mode}</p>
                        <p class="mt-2 text-sm text-gray-400"><strong class="text-white">Rationale:</strong> ${currentBlock.rationale}</p>
                    </div>

                    <!-- Core Strategy -->
                    <div class="bg-gray-700 p-4 rounded-lg shadow-lg">
                        <h2 class="text-lg font-bold text-white mb-2">Core Strategy & Authority</h2>
                        <p class="text-gray-300"><strong class="text-indigo-400">Type:</strong> ${user.type}</p>
                        <p class="text-gray-300"><strong class="text-indigo-400">Strategy:</strong> ${user.strategy}</p>
                        <p class="text-gray-300"><strong class="text-indigo-400">Authority:</strong> ${user.authority} - Remember to wait for clarity over time. Don't decide from an emotional high or low.</p>
                    </div>
                    
                    <!-- Emotional Wave Check-in -->
                    <div class="bg-gray-700 p-4 rounded-lg shadow-lg">
                        <h2 class="text-lg font-bold text-white mb-2">Emotional Wave Check-in</h2>
                        <p class="text-sm text-gray-400 mb-3">How are you feeling right now? This is for awareness, not for decision-making.</p>
                        <div class="flex items-center justify-between text-xs text-gray-400">
                            <span>Dip</span>
                            <span>Neutral</span>
                            <span>Crest</span>
                        </div>
                        <input type="range" min="1" max="100" value="50" class="w-full h-2 bg-gray-600 rounded-lg appearance-none cursor-pointer accent-indigo-500">
                    </div>
                </div>
            `;
            document.getElementById('dashboard-view').innerHTML = dashboardHTML;
        }

        function renderBodyGraph() {
            const centerPositions = {
                head: { x: 150, y: 50 }, ajna: { x: 150, y: 120 }, throat: { x: 150, y: 210 },
                'g-center': { x: 150, y: 300 }, ego: { x: 220, y: 260 }, spleen: { x: 80, y: 320 },
                sacral: { x: 150, y: 390 }, 'solar-plexus': { x: 220, y: 350 }, root: { x: 150, y: 460 }
            };
            
            const channelsHTML = bodyGraphData.channels.map(ch => {
                const fromPos = centerPositions[ch.from];
                const toPos = centerPositions[ch.to];
                return `<line class="bodygraph-channel" x1="${fromPos.x}" y1="${fromPos.y}" x2="${toPos.x}" y2="${toPos.y}" onclick="showBodyGraphInfo('${ch.name}', '${ch.description}')"/>`;
            }).join('');

            const centersHTML = bodyGraphData.centers.map(c => {
                const pos = centerPositions[c.id];
                const isDefined = c.defined;
                const shape = (c.id === 'sacral' || c.id === 'root') ? 'rect' : ((c.id === 'spleen' || c.id === 'solar-plexus' || c.id === 'ego') ? 'polygon' : 'polygon');
                
                let points = "125,100 175,100 175,140 125,140"; // default square for ajna
                if (c.id === 'head') points = "125,30 175,30 150,70";
                if (c.id === 'throat') points = "125,190 175,190 175,230 125,230";
                if (c.id === 'g-center') points = "125,280 175,280 175,320 125,320";
                if (c.id === 'spleen') points = "80,290 50,320 80,350";
                if (c.id === 'solar-plexus') points = "220,320 250,350 220,380";
                if (c.id === 'ego') points = "220,230 250,260 220,290";

                if (shape === 'rect') {
                     return `<rect x="${pos.x-25}" y="${pos.y-25}" width="50" height="50" class="bodygraph-center ${isDefined ? 'defined' : 'undefined'}" onclick="showBodyGraphInfo('${c.name}', '${c.description}')"/>`;
                } else {
                     return `<polygon points="${points}" class="bodygraph-center ${isDefined ? 'defined' : 'undefined'}" onclick="showBodyGraphInfo('${c.name}', '${c.description}')"/>`;
                }
            }).join('');

            const bodyGraphHTML = `
                <h2 class="text-xl font-bold text-center mb-2">BodyGraph Explorer</h2>
                <p class="text-sm text-center text-gray-400 mb-4">Tap on any center or channel to learn more.</p>
                <svg viewBox="0 0 300 520" class="w-full h-auto">
                    ${channelsHTML}
                    ${centersHTML}
                </svg>
            `;
            document.getElementById('bodygraph-view').innerHTML = bodyGraphHTML;
        }

        function showBodyGraphInfo(name, description) {
            createModal(name, `<p>${description}</p>`);
        }
        
        function renderHouse() {
            const floorsHTML = houseData.floors.map((floor, index) => `
                <div class="house-floor bg-gray-700 p-4 rounded-lg border-l-4 border-indigo-500 shadow-lg" onclick="showHouseInfo('${floor.name}', '${floor.description}', '${floor.components}')">
                    <h3 class="text-lg font-semibold text-white">${floor.name}</h3>
                    <p class="text-sm text-gray-400">${floor.description}</p>
                </div>
            `).join('');

            const houseHTML = `
                <h2 class="text-xl font-bold text-center mb-2">The House of the Self</h2>
                <p class="text-sm text-center text-gray-400 mb-4">A metaphorical map of your inner architecture. Tap a floor to explore.</p>
                <div class="space-y-3">
                    ${floorsHTML}
                </div>
            `;
            document.getElementById('house-view').innerHTML = houseHTML;
        }

        function showHouseInfo(name, description, components) {
            const content = `
                <p>${description}</p>
                <div class="mt-4 pt-4 border-t border-gray-600">
                    <h4 class="font-semibold text-indigo-400">Key Components:</h4>
                    <p class="text-gray-300">${components}</p>
                </div>
            `;
            createModal(name, content);
        }

        function renderCouncil() {
            const councilHTML = `
                 <div class="text-center">
                    <h2 class="text-xl font-bold text-white mb-2">The Architect's Council</h2>
                    <p class="text-sm text-gray-400 mb-6">When you need guidance, summon an architect from your inner council for a generative reflection.</p>
                    <button class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-6 rounded-lg transition-transform transform hover:scale-105" onclick="summonArchitect()">
                        Summon an Architect
                    </button>
                </div>
            `;
            document.getElementById('council-view').innerHTML = councilHTML;
        }
        
        function summonArchitect() {
            const architect = architects[Math.floor(Math.random() * architects.length)];
            const content = `
                <p class="text-gray-400 italic">"${architect.role}"</p>
                <div class="mt-4 pt-4 border-t border-gray-600">
                    <h4 class="font-semibold text-indigo-400">Reflection Prompt:</h4>
                    <p class="text-lg text-gray-200 mt-2">${architect.prompt}</p>
                </div>
            `;
            createModal(`A Message from ${architect.name}`, content);
        }


        // --- INITIALIZATION ---
        function init() {
            renderDashboard();
            renderBodyGraph();
            renderHouse();
            renderCouncil();
            setInterval(renderDashboard, 60000); // Update dashboard every minute
        }

        window.onload = init;

    </script>
</body>
